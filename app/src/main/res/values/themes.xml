<!-- Tema Claro -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ********************************************* -->
    <!-- ************ TEMA PRINCIPAL CLARO *********** -->
    <!-- ********************************************* -->
    <style name="Theme.C_Planner" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="fontFamily">@font/sf_display_regular</item>

        <item name="colorPrimary">@color/azulLogoOscuro</item>        <!-- Azul claro -->
        <item name="colorOnPrimary">@color/white</item>              <!-- Texto sobre primary -->

        <item name="colorSecondary">@color/celeste</item>            <!-- Complementario -->
        <item name="colorOnSecondary">@color/white</item>

        <item name="backgroundColor">@color/white</item>       <!-- Fondo general -->
        <item name="colorOnBackground">@color/grisOscuro</item>

        <item name="colorSurface">@color/blancoGrisáceo</item>       <!-- Superficies como cards -->
        <item name="colorOnSurface">@color/grisOscuro</item>

        <item name="colorError">@color/rojoCoral</item>               <!-- Estados de error -->
        <item name="colorOnError">@color/white</item>

        <item name="materialButtonStyle">@color/azulLogoClaro</item>    <!-- Botón primario -->

        <!-- Opcionales: statusBar y navigationBar -->
        <item name="android:statusBarColor">@color/azulLogoOscuro</item>
        <item name="android:navigationBarColor">@color/azulLogoClaro</item>
    </style>
    <!-- ********************************************* -->
</resources>